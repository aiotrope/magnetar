---
import Layout from '../layouts/Layout.astro';
import Course from '../components/Course.astro';
import Questions from '../components/Questions.svelte';

const title = 'Javascript CS-1234';
const courseId = 6;
const details = 'Javascript CS-1234 Course Section';
const img =
  'https://craftypixels.com/placeholder-image/200x80/ffff00/595959&text=Javascript+CS-1234';
const slug = 'javascript-cs-1234';
---

<Layout title={`Questions & Answers | ${title}`}>
  <div class="container mt-3">
    <Course
      courseId={courseId}
      courseTitle={title}
      courseDetails={details}
      courseImg={img}
      courseSlug={slug}
    />
    <Questions courseId={courseId} title={title} client:only={'svelte'} />
  </div>
</Layout>

